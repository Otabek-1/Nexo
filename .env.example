# ============================================
# APPLICATION CONFIGURATION
# ============================================

# App Name and Version
VITE_APP_NAME=Nexo
VITE_APP_VERSION=1.0.0

# Environment: development | staging | production | testing
VITE_APP_ENV=development

# ============================================
# API CONFIGURATION
# ============================================

# Base API URL for backend requests
VITE_API_URL=http://localhost:3001/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed API calls
VITE_API_RETRY_ATTEMPTS=3

# ============================================
# TEST CONFIGURATION
# ============================================

# Public test base URL for sharing test links
VITE_TEST_BASE_URL=https://nexo-test.netlify.app

# Test session timeout in milliseconds (default: 1 hour)
VITE_TEST_SESSION_TIMEOUT=3600000

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level: debug | info | warn | error
VITE_LOG_LEVEL=info

# Enable console logs in browser console
VITE_ENABLE_CONSOLE_LOGS=true

# Enable error tracking (Sentry, etc.)
VITE_ENABLE_ERROR_TRACKING=false

# ============================================
# FEATURE FLAGS
# ============================================

# Maintenance mode - shows maintenance page
VITE_FEATURE_MAINTENANCE_MODE=false

# Testing mode - enables debug features and test data
VITE_FEATURE_TESTING_MODE=false

# Enable dark mode support
VITE_FEATURE_DARK_MODE=false

# ============================================
# STORAGE CONFIGURATION
# ============================================

# Prefix for localStorage keys to avoid conflicts
VITE_STORAGE_PREFIX=nexo_

# Storage quota warning threshold (0.8 = 80%)
VITE_STORAGE_QUOTA_WARNING=0.8

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Enforce HTTPS in production
VITE_ENABLE_HTTPS=true

# Enable Content Security Policy
VITE_ENABLE_CSP=true
